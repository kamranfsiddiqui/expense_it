<h2 class="text-center">Log in</h2>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                :html => {class: "form-horizontal", role: "form"},) do |f| %>
      <div class="form-group field">
        <div class="control-label col-sm-2">  
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "123@abc.com", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group field">
        <div class="control-label col-sm-2"> 
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
        </div>
      </div>
      
      <% if devise_mapping.rememberable? -%>

          <div class="form-group field">
            <div class="checkbox col-sm-offset-2">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %><span class="checkbox-fix">Remember me</span>
              <% end %>
            </div>
          <div> 
              
            </div>
          </div>
      <% end %>
    
      <div class="form-group actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <div class="form-group actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


