    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
  
          <div class="expense-name">
            <b>Name: <%= @expense.name  %></b>
          </div>

          <div class="expense-date">
            <b>Date: <%= @expense.date %></b>
          </div>

          <div class="expense-amount">
            <b>$ <%= @expense.amount %></b>
          </div>

          <p></p>
          <div class="expense-description">
            <%= @expense.description %>
          </div>
  
          <% if @allowed %>
            <div class="case-actions">
              <%= link_to "Edit", edit_user_expense_path(@user, @expense), class: "btn btn-sm btn-primary"%>
              <%= link_to "Delete", user_expense_path(@user, @expense), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "Are your sure you want to delete this expense?"}%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
